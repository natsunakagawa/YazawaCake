<div class="row">
	<div class="col-xs-4 col-xs-offset-1">
		<h3 class="font-bold admin-title">ショッピングカート</h3>
	</div>
	<div class="col-xs-3 col-xs-offset-4">
		<%= link_to "カートを空にする", cart_items_destroy_cart_path, method: :delete, data: {confirm: "本当に消しますか?"}, class: "btn btn-danger" %>
	</div>
</div>

<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<div class="row">
			<table class="table table-bordered">
				<thead class="bgc-sil">
					<tr>
						<th><h4 class="font-bold">商品名</h4></th>
						<th><h4 class="font-bold">単価(税込)</h4></th>
						<th><h4 class="font-bold">数量</h4></th>
						<th><h4 class="font-bold">小計</h4></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @cart_items.each do |cart_item| %>
						<tr>
							<td class="txt-c ver-m">
								<%= attachment_image_tag cart_item.item, :image, format: 'jpeg', fallback: "mv.jpg", size: "30x30" %>
								<span class="font-bold" style="font-size: 20px;"><%= cart_item.item.name %></span>
							</td>
							<td class="txt-c ver-m">
								<span class="font-bold" style="font-size: 20px;"><%= (cart_item.item.price*1.1).round %></span>
							</td>
							<td class="txt-c ver-m">
								<%= form_for(cart_item) do |f| %>
									<%= f.number_field :amount, min: 1, max: 10 %>

									<%= f.submit('変更', class: 'btn btn-primary') %>
								<% end %>
							</td>
							<td class="txt-c ver-m">
								<span class="font-bold" style="font-size: 20px;"><%= ((cart_item.item.price*1.1).round)*(cart_item.amount) %></span>
							</td>
							<td class="txt-c ver-m">
								<%= link_to "削除する", cart_items_destroy_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
							</td>
							
						</tr>

					<% end %>
				</tbody>
			</table>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<%= link_to "買い物を続ける", items_path, class: "btn btn-primary col-xs-12" %>
			</div>
			<div class="col-xs-4 col-xs-offset-5">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<td class="bgc-sil"><h4 class="font-bold">合計金額</h4></td>
							<td><h4 class="font-bold"><%= @total_price %></h4></td>
						</tr>
					</tbody>
				</table>				
			</div>
		</div>
	</div>
</div>
<div class="col-xs-4 col-xs-offset-4">
	<% if @total_price == 0 %>
		<%= link_to "情報入力に進む", items_path, class: "btn btn-success col-xs-12" %>
	<% else %>
		<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success col-xs-12" %>
	<% end %>
</div>
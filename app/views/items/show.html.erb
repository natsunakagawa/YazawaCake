<div class="row" style="margin-top: 40px;">
	<div class="col-xs-4 col-xs-offset-2">
		<h3 class="font-bold admin-title">商品 詳細画面</h3>
	</div>
</div>

<div class="row" style="margin-top: 60px;">
	<div class="col-xs-3 col-xs-offset-2">
		<%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "mv.jpg", size: "300x300" %>
	</div>

	<div class="col-xs-6 col-xs-offset-1">

		<div class="row">
			
			<div class="col-xs-12">
				<h3 class="font-bold"><%= @item.name %></h3>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				<h4><%= @item.introduction %></h4>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				<span class="font-bold" style="font-size: 38px;">￥<%= (@item.price * 1.1).round %></span><span>(税込)</span>
			</div>
		</div>
	</div>
</div>

<div class="row genre-nav">
	<div class="col-xs-5 col-xs-offset-7">
		<%= form_for @cart_item, url: cart_items_path do |f| %>

			<%= f.hidden_field :item_id, :value => @item.id %>

			<ul class="genre-ul">
				
				<li class="nav-list genre-list">
					<%= f.number_field :amount, min: 1, max: 10 %>
				</li>
			
				<li class="nav-list genre-list">
					<%= f.submit('カートに入れる', class: 'btn btn-info') %>
				</li>
			</ul>
		<% end %>
	</div>
</div>

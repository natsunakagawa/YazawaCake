<div class="row" style="margin-top: 40px;">
	<div class="col-xs-4 col-xs-offset-1">
		<h3 class="font-bold admin-title">商品 詳細画面</h3>
	</div>
</div>

<div class="row" style="margin-top: 60px;">
	<div class="col-xs-4">
		<%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "mv.jpg", size: "300x300" %>
	</div>
	<div class="col-xs-6">

		<div class="row">
			<div class="col-xs-4">
				<h4>商品名</h4>
			</div>
			<div class="col-xs-8">
				<h4><%= @item.name %></h4>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-4">
				<h4>商品説明</h4>
			</div>
			<div class="col-xs-8">
				<h4><%= @item.introduction %></h4>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-4">
				<h4>ジャンル</h4>
			</div>
			<div class="col-xs-8">
				<h4><%= @item.genre.name %></h4>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-4">
				<h4>税込価格 (税抜価格)</h4>
			</div>
			<div class="col-xs-8">
				<h4><%= (@item.price * 1.1).round %> (<%= @item.price %>)</h4>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-4">
				<h4>販売ステータス</h4>
			</div>
			<div class="col-xs-8">
				<% if @item.sale_status == true %>
					<h4>販売中</h4>
				<% else %>
					<h4>販売停止中</h4>
				<% end %>
			</div>
		</div>

	</div>
</div>

<div class="row">
	<div class="col-xs-3 col-xs-offset-7">
		<%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-primary col-xs-8" %>
	</div>
</div>
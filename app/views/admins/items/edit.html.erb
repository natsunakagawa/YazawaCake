<div class="row">
	<div class="col-xs-4 col-xs-offset-1">
		<h3 class="font-bold admin-title" style="margin-bottom: 30px;">商品 編集画面</h3>
	</div>
</div>

<div class="row">
	<%= form_for @item, url: admins_item_path(@item) do |f| %>
		<div class="row">
			<div class="col-xs-3 col-xs-offset-1">
				<div class="row">
					<%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "mv.jpg", size: "300x300"  %>
				</div>
				<div class="row">
					<%= f.attachment_field :image %>
				</div>
			</div>
			<div class="col-xs-4">
				<div class="row form-item">
					<div class="col-xs-6">
						<%= f.label :商品名 %>
					</div>
					<div class="col-xs-6">
						<%= f.text_field :name %>
					</div>
				</div>
				<div class="row form-item">
					<div class="col-xs-6">
						<%= f.label :商品説明 %>
					</div>
					<div class="col-xs-6">
						<%= f.text_area :introduction %>
					</div>
				</div>
				<div class="row form-item">
					<div class="col-xs-6">
						<%= f.label :ジャンル %>
					</div>
					<div class="col-xs-6">
						<%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %>
					</div>
				</div>
				<div class="row form-item">
					<div class="col-xs-6">
						<%= f.label :税抜き価格 %>
					</div>
					<div class="col-xs-6">
						<%= f.text_field :price %>
					</div>
				</div>
				<div class="row form-item">
					<div class="col-xs-6">
						<%= f.label :販売ステータス %>
					</div>
					<div class="col-xs-6">
						<%= f.label :販売中 %>
						<%= f.radio_button :sale_status, :true %>
						<%= f.label :販売停止中 %>
						<%= f.radio_button :sale_status, :false %>
					</div>
				</div>
				<div class="col-xs-5"></div>

			</div>
		</div>
		<div class="row">
			<div class="col-xs-4 col-xs-offset-8">
				<%= f.submit('変更を保存', class: 'btn btn-info col-xs-6') %>
			</div>
		</div>
	<% end %>
</div>
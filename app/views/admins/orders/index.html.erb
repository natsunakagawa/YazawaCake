<div class="row">
	<div class="col-xs-4 col-xs-offset-1">
		<h3 class="font-bold admin-title">注文一覧画面</h3>
	</div>
</div>

<div class="row">
	<div class="col-xs-11 col-xs-offset-1">
		<table class="table">
			<thead class="bgc-sil">
				<tr>
					<th class="font-bold">購入日時</th>
					<th class="font-bold">購入者</th>
					<th class="font-bold">注文個数</th>
					<th class="font-bold">注文ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
					<tr>
						<td class="ver-m time-text">
							<%= link_to admins_order_path(order) do %>
								<%= order.created_at %>
							<% end %>
						</td>
						<td class="ver-m">
							<%= order.end_user.last_name + order.end_user.first_name %>
						</td>
						<td class="ver-m">
							<% total_amount = 0 %>
							<% order.order_details.each do |order_detail| %>
								<% total_amount += order_detail.amount %>
							<% end %>
							<%= total_amount %>
						</td>
						<td class="ver-m">
							<%= order.order_status_i18n %>	
						</td>
						
					</tr>

				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-4">
		<h3 class="font-bold admin-title">注文一覧画面</h3>
	</div>
</div>

<div class="row">
	<div class="col-xs-3">
		<h4 class="font-bold">購入者</h4>
	</div>
	<div class="col-xs-8">
		<%= link_to admins_end_users_path do %>
			<h4><%= @order.end_user.last_name + @order.end_user.first_name %></h4>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-xs-3">
		<h4 class="font-bold">配送先</h4>
	</div>
	<div class="col-xs-6">
		<h4>〒<%= @order.ship_postal_code %> <%= @order.ship_address %><br>
			<%= @order.ship_name %></h4>
	</div>
</div>

<div class="row">
	<div class="col-xs-3">
		<h4 class="font-bold">振込方法</h4>
	</div>
	<div class="col-xs-6">
		<h4><%= @order.payment_method_i18n %></h4>
	</div>
</div>

<div class="row">
	<div class="col-xs-3">
		<h4 class="font-bold">注文ステータス</h4>
	</div>
	<div class="col-xs-6">
		<%= form_with(model: @order, url: admins_order_path(@order), method: :patch, local: true) do |f| %>
			<%= f.select :order_status, Order.order_statuses_i18n.invert, {}, class: 'col-xs-3' %>
			<%= f.submit('更新', class: 'btn btn-primary col-xs-2') %>
		<% end %>
	</div>
</div>

<div class="row" style="margin-top: 30px;">
	<div class="col-xs-9">
		<table class="table">
			<thead class="bgc-sil">
				<tr>
					<th class="font-bold">商品名</th>
					<th class="font-bold">単価(税込)</th>
					<th class="font-bold">数量</th>
					<th class="font-bold">小計</th>
					<th class="font-bold">製作ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @order_details.each do |order_detail| %>
					<tr>
						<td class="ver-m time-text">
							<%= order_detail.item.name %>
						</td>
						<td class="ver-m">
							<%= (order_detail.buy_price*1.1).round %>
						</td>
						<td class="ver-m">
							<%= order_detail.amount %>
						</td>
						<td class="ver-m">
							<%= ((order_detail.buy_price*1.1).round)*(order_detail.amount) %>
							<% @total_price += ((order_detail.buy_price*1.1).round)*(order_detail.amount) %>
						</td>
						<td class="ver-m">
							<%= form_with(model: order_detail, url: admins_order_detail_path(order_detail), method: :patch, local: true) do |f| %>
								<%= f.select :make_status, OrderDetail.make_statuses_i18n.invert, {}, class: 'col-xs-5' %>
								<%= f.submit('更新', class: 'btn btn-primary col-xs-2') %>
							<% end %>
						</td>
						
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-xs-3">
		<div class="row">
			<div class="col-xs-6">
				<h4 class="font-bold">商品合計</h4>
			</div>
			<div class="col-xs-6">
				<h4 class="font-bold"><%= @total_price %>円</h4>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6">
				<h4 class="font-bold">送料</h4>
			</div>
			<div class="col-xs-6">
				<h4 class="font-bold"><%= @order.postage %></h4>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6">
				<h4 class="font-bold">請求金額合計</h4>
			</div>
			<div class="col-xs-6">
				<h4 class="font-bold"><%= @total_price+@order.postage %></h4>
			</div>
		</div>
	</div>
</div>
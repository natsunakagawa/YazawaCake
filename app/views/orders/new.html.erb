<div class="row">
	<div class="col-xs-4 col-xs-offset-2">
		<h3 class="font-bold admin-title">注文情報入力</h3>
	</div>
</div>

<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<div class="row">
			<%= form_with(model: @order, url: confirm_order_path, method: :post, local: true) do |f| %>
			<div class="col-xs-12">
				<div class="row">
					<div class="col-xs-3">
						<h4 class="font-bold">支払方法
						</h4>
					</div>
				</div>
				<div class="row">
					<%= f.radio_button :payment_method, 0, {:checked => true} %>
					<%= f.label :クレジットカード %>
				</div>
				<div class="row">
					<%= f.radio_button :payment_method, 1 %>
					<%= f.label :銀行振込 %>
				</div>

				<div class="row">
					<div class="col-xs-3">
						<h4 class="font-bold">お届け先</h4>
					</div>
				</div>

				<div class="row">
					<%= f.radio_button :select_address, 1, {:checked => true} %>
					<%= f.label :ご自身の住所 %>
				</div>
				<div class="row">
					<h4><%= current_end_user.postal_code %> <%= current_end_user.address %></h4>
				</div>
				<div class="row">
					<h4><%= current_end_user.last_name+current_end_user.first_name %></h4>
				</div>

				<div class="row">
					<%= f.radio_button :select_address, 2 %>
					<%= f.label :登録済み住所から選択 %>
				</div>
				<div class="row">
					<%= f.collection_select :address_info, Addresse.all, :id, :address_information, :prompt => "配送先を選択してください" %>
				</div>

				<div class="row">
					<%= f.radio_button :select_address, 3 %>
					<%= f.label :新しいお届け先 %>
				</div>

				<div class="row">
					<div class="col-xs-4">
						<%= f.label :'郵便番号(ハイフンなし)' %>
					</div>
					<div class="col-xs-8">
						<%= f.text_field :ship_postal_code %>
					</div>
				</div>

				<div class="row">
					<div class="col-xs-4">
						<%= f.label :住所 %>
					</div>
					<div class="col-xs-8">
						<%= f.text_field :ship_address %>
					</div>
				</div>

				<div class="row">
					<div class="col-xs-4">
						<%= f.label :宛名 %>
					</div>
					<div class="col-xs-8">
						<%= f.text_field :ship_name %>
					</div>
				</div>
				<div class="row" style="margin-top: 30px;">
					<div class="col-xs-offset-4">
						<%= f.submit('確認画面へ進む', class: 'btn btn-primary col-xs-4') %>
					</div>
				</div>

			</div>

			
		<% end %>
		</div>
	</div>
</div>


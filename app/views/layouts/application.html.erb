<!DOCTYPE html>
<html>
  <head>
    <title>YazawaCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container-fluid clearfix under-line">
        <div class="box-logo">
          <h2>Nagano Cake</h2>
        </div>

        <nav>
          <ul class="nav">

            <% if admin_signed_in? %>
              <li class="nav-list">
              <%= link_to "受注一覧", new_end_user_registration_path, class: "btn btn-default nav-btn" %>
            </li>

            <li class="nav-list">
              <%= link_to "商品登録", new_admins_item_path, class: "btn btn-default nav-btn" %>
            </li>

            <li class="nav-list">
              <%= link_to "ジャンル管理", admins_genres_path, class: "btn btn-default nav-btn" %>
            </li>

            <li class="nav-list">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-default nav-btn" %>
            </li>

          <% elsif end_user_signed_in? %>
          <li class="nav-list nav-list-login li-text">
            ようこそ、<span><%= @end_user.last_name %></span>さん！
          </li>

          <li class="nav-list nav-list-login">
              <%= link_to "マイページ", end_user_yours_path, class: "btn btn-default nav-btn" %>
            </li>

             <li class="nav-list nav-list-login">
              <%= link_to "商品一覧", new_end_user_session_path, class: "btn btn-default nav-btn" %>
            </li>

            <li class="nav-list nav-list-login">
              <%= link_to "カート", new_end_user_session_path, class: "btn btn-default nav-btn" %>
            </li>   

            <li class="nav-list nav-list-login">
              <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: "btn btn-default nav-btn" %>
            </li>   
            
          <% else %>
            
            <li class="nav-list nav-list">
              <%= link_to "商品一覧", items_path, class: "btn btn-default nav-btn" %>
            </li>  

            <li class="nav-list">
              <%= link_to "新規登録", new_end_user_registration_path, class: "btn btn-default nav-btn" %>
            </li>

            <li class="nav-list">
              <%= link_to "ログイン", new_end_user_session_path, class: "btn btn-default nav-btn" %>
            </li>
 
          <% end %>
          </ul>
        </nav>

        
            
      </div>
    </header>

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
